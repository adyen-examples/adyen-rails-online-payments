<main class="whole-preview">
   <section class="cart">
      <h2>Cart</h2>
      <div class="order-summary">
         <ul class="order-summary__list">
            <li class="order-summary__list__list-item">
               <%= image_tag ("sunglasses.png"), class:"order-summary__list__list-item__image" %>
               <p class="order-summary__list__list-item__title">Sunglasses</p>
               <p class="order-summary__list__list-item__price">€5.00</p>
            </li>
            <li class="order-summary__list__list-item">
              <%= image_tag ("headphones.png"), class:"order-summary__list__list-item__image" %>
               <p class="order-summary__list__list-item__title">Headphones</p>
               <p class="order-summary__list__list-item__price">€5.00</p>
            </li>
         </ul>
      </div>
      <div class="cart__footer"><span class="cart__footer__label">Total:</span><span class="cart__footer__amount">€10.00</span>
        <%= link_to "/checkout/#{@type}", method: :get do %>
          <p class="button">Continue to checkout</p>
        <% end %>
      </div>
   </section>
</main>
